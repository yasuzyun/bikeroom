    <h3 style="text-align:center; color:white; background-color:black;">投稿一覧</h3>
    
   <% @articles.each do |article| %>
     <div class="dai">
        <span class="sabudai">タイトル</br>
          <span class="sabutou"><%= article.title %> </span>
        </span>
        
         <span class="sabudai">内容</br>
          <span class="sabutou"><%= article.body %> </span>
        </span>
        
        
        <div class="like_button_on">
    <%= link_to "いいね済み", likes_delete_path(article_id: @article.id), {method: "post", remote: true} %>
    <%= @like_count %>
</div>
<div class="like_button">
    <%= link_to "いいね", likes_create_path(article_id: @article.id), {method: "post", remote: true} %>
    <%= @like_count %>
</div>
       
        
         <span class="sabudai"><%= link_to 'コメントする',article_path(article) %></span>
     </div>
      
      
      <% end %>
  


